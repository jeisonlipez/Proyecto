<div id="tabla" class="container p-4">
    <div class="row mx-auto">
        {{#each links}}
            <div class="col-md-3 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase"> 
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2"> {{description}} </p>
                        <p> {{timeago created_at}} </p>
                        <a href="/links/deleted/{{id}}" class="btn btn-danger">Eliminar</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                        <p class="m-3"> <a href="/links/led/{{id}}" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">{{estado}}</a></p>

                    </div>
                </div>
            </div>
        {{else}}    
            <div class="col-md-5 mx-auto">
                <div class="card card-body text-center">
                    <p>NO HAY ENLACES GUARDADOS TODAVIA</p>
                    <a href="/links/add">CREA UNO AQU√ç</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>